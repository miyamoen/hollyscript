module Views.Basics.Message exposing (book, view)

import Bibliopola exposing (..)
import Element exposing (..)
import Html
import Html.Attributes exposing (style)


view : String -> Element msg
view content =
    paragraph [ spacing 8 ]
        [ Html.div [ style "white-space" "pre-wrap" ]
            [ Html.text content ]
            |> html
        ]


book : Book
book =
    intoBook "Message" identity view
        |> addStory
            (Story "content"
                [ ( "OneLine", "むかーしむかしあるところに" )
                , ( "empty", "" )
                , ( "meros", meros )
                ]
            )
        |> buildBook
        |> withFrontCover (view meros)


